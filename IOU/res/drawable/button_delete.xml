<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape>
            <solid
                android:color="#b31010" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape> 
    </item>

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#9b1414" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="15dp"
                android:right="15dp"
                android:top="8dp"
                android:bottom="8dp" />
        </shape> 
    </item>
    
</selector>